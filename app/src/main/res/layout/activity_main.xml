<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/bigNumberId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:textSize="28sp"
        android:hint="@string/bigNumberText"
        android:inputType="numberDecimal"
        android:layout_margin="3dp"
        android:padding="5dp"/>

    <EditText
        android:id="@+id/smallNumberId"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:textSize="28sp"
        android:hint="@string/smallNumberText"
        android:inputType="numberDecimal"
        android:layout_margin="3dp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/addButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="+"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/subButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="-"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/resultTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="Results"/>

</LinearLayout>